#!/bin/python3

"""
-- EPITECH PROJECT, 2024
-- Hub project
-- File description:
-- fcc
"""

from sys import exit, argv
from genericpath import isfile
from src.floff import *
from src.fcc.compiler import Compiler
from src.fcc.errors import *
from src.fcc.warnings import *

def read_code(file_path: str) -> str:
    data: str = None

    if (not isfile(file_path)):
        return (None)
    with open(file_path, 'r') as fp:
        data: str = fp.read()
    return (data)

def main() -> int:
    code: str = None
    return_status: int = 0

    if len(argv) < 2:
        print("Usage: fcc <filename>")
        return (84)
    for file in argv[1:]:
        code: str = read_code(file)

        if (not code):
            return_status: int = 84
            continue
        compiler: Compiler = Compiler(code, [], [invalid_token_error], file)
        compiler.parse()
        compiler.tokenize()
        compiler.compile()

        for item in compiler.debug:
            print(item)
    return (return_status)


if __name__ == "__main__":
    exit(main())
